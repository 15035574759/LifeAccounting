/* pages/regard/regard.wxss */
page{  
  display: block;  
  min-height: 100%;  
  background-color: #EDEDED;  
}  
.container{
	height:auto;
}
.GetBox{
	margin-top:20px;
	width:100%;
}
.box{
	float: left;
	width:100%;
	background: #FFFFFF;
	height:40px;
	line-height: 40px;
	border-bottom: 1px solid #EDEDED;
}
.box01{
	float: left;
	margin-left: 10px;
}
.box02{
	float: right;
	margin-right: 10px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:30px;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  /*margin: 20rpx;*/
  border-radius: 50%;
}

.userinfo-nickname{
  margin:15px 0 20px 0;
}

.UpdateBox{
	float: left;
	width:100%;
	background: #FFFFFF;
	border-top: 1px solid #EDEDED;
	border-bottom: 1px solid #EDEDED;
	margin-bottom: 20px;
}
.UpdateBox01{
	height:30px;
	line-height: 30px;
	border-bottom: 1px solid #EDEDED;
	margin-left: 10px;
}
.UpdateBox02{
	line-height: 25px;
	margin-left: 10px;
	height:auto;
}