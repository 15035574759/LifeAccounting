}
.box02{
	float: right;
	margin-right: 10px;
}
.box02-jt::after{
	position:relative;
	float:right;
	content: "";
	display: inline-block;
	height: 18rpx;
	width: 18rpx;
	border-width: 3rpx 3rpx 0 0;
	border-color: #888888;
	border-style: solid;
	transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
	margin:14px 10px 0 0;
}
.box03{
	background: #EDEDED;
	height:30px;
	line-height: 30px;
	font-size:13px;
	color: #A1A1A1;
	padding-left: 13px;
}
.boxswitch{
	float: left;
	width:100%;
}

